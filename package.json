{
  "name": "ctools",
  "displayName": "ctools",
  "description": "my tools ",
  "version": "0.1.3",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:vue",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ctools.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ctools.i18n",
        "title": "i18n start"
      },
      {
        "command": "ctools.i18n.refresh",
        "title": "i18n refresh"
      }
    ],
    "configuration": {
      "title": "ctools",
      "properties": {
        "ctools.i18n.options": {
          "type": "object",
          "default": {},
          "description": "i18n配置，: { [语言]: [配置文件路径] }"
        },
        "ctools.i18n.apiName": {
          "type": "array",
          "default": [
            "$tc"
          ],
          "description": "i18n方法名: 类似$t, 方法名有特殊字符的需要加上转义符=> '\\\\$t'"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/lodash": "^4.14.202",
    "@types/lodash-es": "^4.17.12",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21"
  }
}
