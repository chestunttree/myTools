{
  "name": "mytools",
  "displayName": "mytools",
  "description": "myself tools",
  "publisher": "my-publisher",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mytools.i18n"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mytools.i18n",
        "title": "i18n show"
      },
      {
        "command": "mytools.i18n.refresh",
        "title": "i18n refresh"
      }
    ],
    "configuration": {
      "title": "myTools",
      "properties": {
        "mytools.i18nTools.options": {
          "type": "object",
          "default": {},
          "description": "i18n配置，: { [语言]: [配置文件路径] }"
        },
        "mytools.i18nTools.apiName": {
          "type": "array",
          "default": ["$tc"],
          "description": "i18n方法名: 类似$t, 方法名有特殊字符的需要加上转义符=> '\\\\$t'"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/lodash": "^4.14.202",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21"
  }
}